<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" href="../views/layout/navbar.ejs">
    <title>Update medicine</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
  <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.1/dist/jquery.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <%- include('./layout/navbar')%>
   <div class="container mt-4">
    <div class="card w-50 mx-auto">
        <div class="card-body">
           <h4 class="card-title text-center">Update product</h4>
          <div class="card-text">
            <form action="/updateproduct/<%= _id %>" method="post">
                <dl class="row">
                    <dt class="col-sm-3"><label>SI NO</label></dt>
                    <dd class="col-sm-9" >
                        <input type="number" name="uniqueid"class="pl-2 border-0 w-100"  value="<%=data.uniqueid%>" required></dd>
                    <dt class="col-sm-3"><label>Medicine name</label></dt>
                    <dd class="col-sm-9" > 
                        <input type="text" name="medicinename" placeholder="medicine name" class=" pl-2 border-0 w-100 " value="<%=data.medicinename%>" required></dd>
                    <dt class="col-sm-3"><label>Price</label></dt>
                    <dd class="col-sm-9" >
                        <input type="number" name="price"class="pl-2 border-0 w-100" value="<%=data.price%>"  required></dd>
                    <dt class="col-sm-3"> <label>company</label></dt>
                    <dd class="col-sm-9" > 
                        <input type="text" name="company" placeholder="company name" class=" pl-2 border-0 w-100 " value="<%=data.company%>" required></dd>
                        <dt class="col-sm-3"> <label>Available stock</label></dt>
                        <dd class="col-sm-9" > 
                            <input type="number" name="stock" class=" pl-2 border-0 w-100 " value="<%=data.stock%>" required></dd>
                        <dt class="col-sm-3"> <label>Expiry date</label></dt>
                        <dd class="col-sm-9" > 
                            <input type="date" name="expirydate"class=" pl-2 border-0 w-100 " value="<%= new Date(data.expirydate).toISOString().split('T')[0] %>" required></dd>
                   </dl>
                   <div style="text-align: center;"><input type="submit" value="Submit"></div>
            </form>
          </div>
        </div>
   </div>
   <% if (errorss) { %>
    <% Object.values(errorss).forEach((err) => {%>
    <ul style="display:flex;justify-content:center">
        <% if(err.msg){ %>
            <li><%= err.msg %></li>
            <% } %>
    </ul>
    <% }) %>
    <% } %>
    <% if (errors) { %>
        <% Object.values(errors).forEach((err) => {%>
        <ul style="display:flex;justify-content:center">
            <% if(err.message){ %>
                <li><%= err.message %></li>
                <% } %>
        </ul>
        <% }) %>
        <% } %>
   </div>
</body>
</html>